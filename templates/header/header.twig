<header>
	<div class="logo">
		<a href="calendrier">ChronoGestCal</a>
	</div>
	<nav class="main-nav">
		<a href="calendrier" class="nav-link {{ current_page == 'calendrier' ? 'active' : '' }}">
			<span class="nav-icon">📅</span>
			Calendrier
		</a>
		<a href="agenda" class="nav-link {{ current_page == 'agenda' ? 'active' : '' }}">
			<span class="nav-icon">🗓️</span>
			Agenda
		</a>
		{% if is_logged_in %}
			<a href="mon-compte" class="nav-link {{ current_page == 'mon-compte' ? 'active' : '' }}">
				<span class="nav-icon">👤</span>
				Mon compte
			</a>
		{% endif %}
	</nav>
	<div class="auth-controls">
		{% if is_logged_in %}
			<div class="user-menu">
				<div class="avatar-container" onclick="toggleUserMenu()">
					<div class="avatar">{{ user.email|slice(0, 1)|upper }}</div>
				</div>
				<div class="user-dropdown" id="user-dropdown">
					<div class="user-info">{{ user.email }}</div>
					<div class="dropdown-divider"></div>
					<button onclick="window.location.href='mon-compte'">Mon compte</button>
					<button onclick="logout()">Déconnexion</button>
				</div>
			</div>
		{% else %}
			<button onclick="showAuthForm('login')">Connexion</button>
			<button onclick="showAuthForm('register')">Inscription</button>
		{% endif %}
	</div>
</header>

